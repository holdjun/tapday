{
  "permissions": {
    "allow": [
      "Bash(pnpm lint)",
      "Bash(pnpm lint:fix)",
      "Bash(pnpm type-check)",
      "Bash(pnpm format)",
      "Bash(pnpm format:check)",
      "Bash(pnpm build)",
      "Bash(pnpm test)",
      "Bash(pnpm test:watch)",
      "Bash(pnpm dlx shadcn@latest add *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(gh api *)",
      "Bash(gh repo *)",
      "Bash(pnpm install)",
      "Bash(git *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm exec prettier --write --ignore-unknown $CLAUDE_FILE_PATHS"
          }
        ]
      }
    ]
  }
}
